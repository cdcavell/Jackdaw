@model Jackdaw.IdentityServer.Models.Account.LoginViewModel

<div class="container h-100">
    <div class="row h-100 align-items-center justify-content-center">
        <div class="col-12 col-lg-8 page-content text-center">
            <h2 lang="@ViewBag.CultureName">@Localizer["Heading-1"]</h2>
            <p lang="@ViewBag.CultureName">@Localizer["Text-1"]</p>
            @if (Model.EnableLocalLogin)
            {
                <div class="col-lg-12">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="form-group">
                            <label class="text-left w-100 mb-1 pb-0" asp-for="Username"><h4 lang="@ViewBag.CultureName">@Localizer["Heading-2"]</h4></label>
                            <input class="form-control" placeholder="@Localizer["Text-2A"]" asp-for="Username" autofocus lang="@ViewBag.CultureName">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" placeholder="@Localizer["Text-2B"]" asp-for="Password" autocomplete="off" lang="@ViewBag.CultureName">
                        </div>
                        <div class="d-flex px-3 py-0">
                            <div class="p-0">
                            @if (Model.AllowRememberLogin)
                            {
                                <div class="form-group">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="RememberLogin">
                                        <label class="form-check-label" asp-for="RememberLogin" lang="@ViewBag.CultureName">
                                            @Localizer["Text-2C"]
                                        </label>
                                    </div>
                                </div>
                            }
                            </div>
                            <div class="flex-grow-1 p-0">
                                <button class="btn btn-secondary ml-1 mr-0 float-right" name="button" value="cancel" lang="@ViewBag.CultureName">@Localizer["Button-2B"]</button>
                                <button class="btn btn-primary mr-1 float-right" name="button" value="login" lang="@ViewBag.CultureName">@Localizer["Button-2A"]</button>
                            </div>
                        </div>
                    </form>
                </div>
            }
            @if (Model.VisibleExternalProviders.Any())
            {
                <div class="col-lg-12">
                    <h4 class="text-left w-100 mt-2 mb-1 pb-0" lang="@ViewBag.CultureName">@Localizer["Heading-3"]</h4>
                    <ul class="list-inline">
                        @foreach (var provider in Model.VisibleExternalProviders)
                        {
                            <li class="list-inline-item">
                                <a class="btn btn-secondary shadow-sm"
                                    asp-controller="External"
                                    asp-action="Challenge"
                                    asp-route-scheme="@provider.AuthenticationScheme"
                                    asp-route-returnUrl="@Model.ReturnUrl">
                                    @provider.DisplayName
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
</div>
