{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[({Timestamp}) ({Level:u3}) ({SourceContext}) (RequestPath: {RequestPath})] {Message}{NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "EventLog",
        "Args": {
          "source": "Jackdaw.IdentityServer",
          "logName": "Jackdaw",
          "restrictToMinimumLevel": "Information",
          "manageEventSource": true,
          "outputTemplate": "[({Timestamp}) ({Level:u3}) ({SourceContext}) (RequestPath: {RequestPath})] {Message}{NewLine:1}{Exception:1}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId",
      "CorrelationId"
    ]
  },
  "AllowedHosts": "*"
}
